# ===== CONFIGURAÇÕES BÁSICAS =====
NEXT_PUBLIC_APP_DOMAIN="http://localhost:3000"  # URL do seu app (localhost para dev, domínio real para produção)

# ===== DATABASE (SUPABASE) =====
DATABASE_URL="postgres://prisma.SEU_PROJECT_REF:SUA_SENHA_PRISMA@SEU_REGION.pooler.supabase.com:5432/postgres"  # URL do banco Supabase (Settings > Database > Connection string)
DIRECT_URL="postgres://prisma.SEU_PROJECT_REF:SUA_SENHA_PRISMA@SEU_REGION.pooler.supabase.com:5432/postgres"  # Mesma URL acima (necessária para Prisma)

# ===== AUTENTICAÇÃO =====
BETTER_AUTH_SECRET="gere-uma-chave-secreta-de-32-caracteres-aqui"  # Gere com: openssl rand -base64 32 ou use um gerador online
BETTER_AUTH_URL="http://localhost:3000"  # Mesma URL do NEXT_PUBLIC_APP_DOMAIN

# ===== GITHUB OAUTH =====
GITHUB_CLIENT_ID=seu_github_client_id_aqui  # Crie em: GitHub > Settings > Developer settings > OAuth Apps
GITHUB_CLIENT_SECRET=seu_github_client_secret_aqui  # Secret da mesma OAuth App do GitHub

# ===== OPENAI =====
DEFAULT_OPENAI_API_KEY=sk-seu_openai_api_key_aqui  # Crie em: platform.openai.com > API keys
DEFAULT_OPENAI_MODEL=gpt-4o-mini  # Modelo padrão (gpt-4o-mini é mais barato)
DEFAULT_OPENAI_EMBEDDING_MODEL=text-embedding-3-large  # Modelo para embeddings (vetorização)

# ===== PINECONE (VECTOR DATABASE) =====
DEFAULT_PINECONE_API_KEY=pcsk_seu_pinecone_api_key  # Crie em: app.pinecone.io > API Keys
DEFAULT_PINECONE_HOST="https://seu-index.svc.region.pinecone.io"  # URL do seu index Pinecone

# ===== QSTASH (WORKFLOWS) =====
QSTASH_URL="https://qstash.upstash.io"  # URL do QStash (sempre essa)
QSTASH_TOKEN=seu_qstash_token  # Token do QStash (Console Upstash > QStash)
QSTASH_CURRENT_SIGNING_KEY=sig_seu_current_key  # Chave de assinatura atual do QStash
QSTASH_NEXT_SIGNING_KEY=sig_seu_next_key  # Próxima chave de assinatura do QStash

# ===== UPSTASH REDIS =====
REDIS_URL=https://seu-redis.upstash.io  # URL do Redis Upstash (Console > Redis > Details)
REDIS_TOKEN=seu_upstash_token  # Token do Redis Upstash

# ===== RESEND (EMAILS) =====
RESEND_API_KEY="re_seu_resend_api_key"  # Crie em: resend.com > API Keys

# ===== STRIPE (PAGAMENTOS) =====
STRIPE_API_KEY=sk_test_seu_stripe_secret_key  # Chave secreta da Stripe (Dashboard > Developers > API keys)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_seu_stripe_public_key  # Chave pública da Stripe (mesma página)
STRIPE_WEBHOOK_SECRET=whsec_seu_stripe_webhook_secret  # Secret do webhook da Stripe (Webhooks > Endpoint)

# ===== UPLOADTHING (UPLOADS DE ARQUIVOS) =====
UPLOADTHING_TOKEN=your_uploadthing_token_here  # Crie em: uploadthing.com/dashboard > API Keys

# ===== UPLOADTHING ASSETS =====
ASSETS_UPLOADTHING_TOKEN=your_assets_uploadthing_token_here  # Token separado para assets (opcional)
ASSETS_UPLOADTHING_APP_ID=seu_assets_uploadthing_app_id  # ID do app para assets
ASSETS_UPLOADTHING_URL=https://utfs.io/f/  # URL base da Uploadthing (sempre essa)